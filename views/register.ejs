<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Register</title>
</head>
<body>
    <%- include('./partials/header.ejs') %>

<body>
    <div class="container"> 
        <form action="/api/signup" method="POST" class="form">
            <h3><%= __('Register') %></h3>
            <fieldset class="fieldset">
                <input type="email" name="email" id="" placeholder="Enter email">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" name="full_name" id="" placeholder="Enter full name">
            </fieldset>
            <fieldset class="fieldset">
                <input type="password" name="password" id="" placeholder="Enter password">
            </fieldset>
            <fieldset class="fieldset">
                <input type="password" name="re_password" id="" placeholder="Confirm password">
            </fieldset>
            <fieldset class="fieldset">
                <button type="submit">Register</button>
            </fieldset>
        </form>
    </div>
</body>
</html>
