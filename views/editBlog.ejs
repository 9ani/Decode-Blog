<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Edit Blog</title>
</head>
<body>
    <%- include('./partials/header.ejs') %>

<body>
    <div class="container"> 
        <form action="/api/blogs/edit" method="POST" class="form">
            <h3>Editing Blog</h3>
            <fieldset>
                <input type="hidden" value="<%= blog._id %>" name="id">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" name="title" value="<%= blog.title %>" placeholder="Enter blog title">
            </fieldset>
            <fieldset class="fieldset">
                <label for="">Select category</label>
                <select name="category">
                    <% 
                        categories.forEach(category => {
                    %>
                        <option value="<%= category._id %>"<%= blog.category && blog.category._id.toString() === category._id.toString() ? ' selected' : '' %>><%= category.name %></option>
                    <%
                        }) 
                    %>
                </select>
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" name="description" id="description" value="<%= blog.description %>" placeholder="Enter blog description">
            </fieldset>
            <fieldset class="fieldset">
                <button type="submit">Update</button>
            </fieldset>
        </form>
    </div>
</body>
</html>
